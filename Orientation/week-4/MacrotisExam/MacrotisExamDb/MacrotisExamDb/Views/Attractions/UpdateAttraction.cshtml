@model Attractions
@{
    ViewData["Title"] = "UpdateAttractions";
}

<h2>UpdateAttractions</h2>

<form action="/edit/@Model.Id" method="post" name="attract">
    <label>Name: </label><input type="text" name="AttrName" value="@Model.AttrName" required /><br />
    <label>City: </label><input type="text" name="City" value="@Model.City" required /><br />
    <label>Price: </label><input type="text" name="Price" value="@Model.Price" required /><br />
    <label>Longitude: </label><input type="text" name="Longitude" value="@Model.Longitude" required /><br />
    <label>Lattitude: </label><input type="text" name="Lattitude" value="@Model.Lattitude" required /><br />
    <label>Category: </label><input type="text" name="Category" value="@Model.Category" required /><br />
    <label>Duration: </label><input type="text" name="Duration" value="@Model.Duration" required /><br />
    <label>Recommended Age:</label><input type="text" name="RecommendedAge" value="@Model.RecommendedAge" required /><br />
    <button type="submit">Submit</button><br />
</form>
